#include <iostream>
#include <array>
using namespace std;

int main() {

    array<int, 15> arr = {3, 5, 3, 7, 5, 8, 1, 9, 7, 2, 5, 8, 6, 3, 8};
    bool isPrinted[15] = {false};

    cout << "Елементи, які повторюються більше одного разу:" << endl;
    for (int i = 0; i < arr.size(); i++) {
        int count = 1;
        if (isPrinted[i]) continue;

        for (int j = i + 1; j < arr.size(); j++) {
            if (arr[i] == arr[j]) {
                count++;
                isPrinted[j] = true;
            }
        }

        if (count > 1) {
            cout << arr[i] << " (повторюється " << count << " раз)" << endl;
        }
    }

    return 0;
}
